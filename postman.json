{
  "info": {
    "_postman_id": "b2b2a94f-0e7d-4b9d-8b73-2c6f7d7d6f11",
    "name": "Products (No Product SKU) + Combinations + Upselling",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "PASTE_YOUR_JWT_HERE" },
    { "key": "productId", "value": "101" },
    { "key": "variantId", "value": "1" },
    { "key": "comboSku", "value": "TSHIRT-RED-M" }
  ],
  "item": [
    {
      "name": "Products - List (optional skusSummary)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/products?includeSkusSummary=1&page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["products"],
          "query": [
            { "key": "includeSkusSummary", "value": "1" },
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" }
          ]
        }
      }
    },
    {
      "name": "Products - Get by ID",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Products - Search by Combination SKU",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/products/by-sku/{{comboSku}}",
          "host": ["{{baseUrl}}"],
          "path": ["products", "by-sku", "{{comboSku}}"]
        }
      }
    },
    {
      "name": "Products - Create (multipart/form-data) WITH combinations",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "name", "value": "T-Shirt", "type": "text" },
            { "key": "wholesalePrice", "value": "120", "type": "text" },
            { "key": "lowestPrice", "value": "199", "type": "text" },
            { "key": "storageRack", "value": "A-12", "type": "text" },
            { "key": "categoryId", "value": "5", "type": "text" },
            { "key": "storeId", "value": "2", "type": "text" },
            { "key": "warehouseId", "value": "1", "type": "text" },
            { "key": "description", "value": "Cotton tee", "type": "text" },
            {
              "key": "callCenterProductDescription",
              "value": "قطن 100%، مريح، متاح مقاسات وألوان.",
              "type": "text"
            },
            { "key": "upsellingEnabled", "value": "true", "type": "text" },
            {
              "key": "upsellingProducts",
              "value": "[{\"productId\":\"205\",\"label\":\"Cap\",\"callCenterDescription\":\"رشّح كاب مطابق بسعر مخفّض\"},{\"productId\":\"301\",\"label\":\"Socks\",\"callCenterDescription\":\"جوارب قطنية ممتازة تكمل اللوك\"}]",
              "type": "text"
            },
            {
              "key": "mainImage",
              "value": "https://cdn.example.com/main.jpg",
              "type": "text"
            },
            {
              "key": "imagesMeta",
              "value": "[{\"url\":\"https://cdn.example.com/1.jpg\"},{\"url\":\"https://cdn.example.com/2.jpg\"}]",
              "type": "text"
            },
            {
              "key": "combinations",
              "value": "[{\"key\":\"color=red|size=m\",\"sku\":\"TSHIRT-RED-M\",\"attributes\":{\"color\":\"red\",\"size\":\"m\"},\"stockOnHand\":30,\"reserved\":0},{\"key\":\"color=red|size=l\",\"sku\":\"TSHIRT-RED-L\",\"attributes\":{\"color\":\"red\",\"size\":\"l\"},\"stockOnHand\":20,\"reserved\":2}]",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/products",
          "host": ["{{baseUrl}}"],
          "path": ["products"]
        }
      }
    },
    {
      "name": "Products - Update (PATCH, multipart/form-data)",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "name", "value": "T-Shirt Updated", "type": "text" },
            { "key": "upsellingEnabled", "value": "true", "type": "text" },
            {
              "key": "upsellingProducts",
              "value": "[{\"productId\":\"205\",\"label\":\"Cap\",\"callCenterDescription\":\"نسخة محدثة للنص\"}]",
              "type": "text"
            },
            {
              "key": "callCenterProductDescription",
              "value": "وصف محدث للكول سنتر",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Products - Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Combinations - Get SKUs for Product",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}/skus",
          "host": ["{{baseUrl}}"],
          "path": ["products", "{{productId}}", "skus"]
        }
      }
    },
    {
      "name": "Combinations - Upsert SKUs (create/update rows)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    {\n      \"key\": \"color=blue|size=m\",\n      \"sku\": \"TSHIRT-BLUE-M\",\n      \"attributes\": { \"color\": \"blue\", \"size\": \"m\" },\n      \"stockOnHand\": 15,\n      \"reserved\": 0\n    }\n  ]\n}\n"
        },
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}/skus",
          "host": ["{{baseUrl}}"],
          "path": ["products", "{{productId}}", "skus"]
        }
      }
    },
    {
      "name": "Combinations - Adjust Stock by Variant Row ID",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"delta\": 5\n}\n"
        },
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}/skus/{{variantId}}/adjust-stock",
          "host": ["{{baseUrl}}"],
          "path": ["products", "{{productId}}", "skus", "{{variantId}}", "adjust-stock"]
        }
      }
    }
  ]
}
